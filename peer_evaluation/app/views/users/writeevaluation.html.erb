<h1>Project Evaluation Page</h1>
<% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag '/completeevaluation', id: 'eval'  do |f| %>
      <p id="score">
        <%= label_tag :score, "Score", id: 'eval' %><br />
        <% for i in 1..10 do%>
            <%=radio_button_tag(:score, i) %>
            <%=i%>

        <%end%>
      </p><br /><br />
      <p id="comment">
        <%= label_tag :comments,"Comments", id: 'eval'  %><br />
        <%= text_area_tag :comments,nil, size: "50x5" %>
      </p>

      <%= hidden_field_tag :id,params[:ID] %>
      <%= submit_tag "Submit Evaluation", class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
